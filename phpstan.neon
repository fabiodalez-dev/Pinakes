includes:
    - phpstan-baseline.neon

parameters:
    level: 4
    bootstrapFiles:
        - vendor/autoload.php
    paths:
        - app
        - public/index.php
        - installer/index.php
        - installer/classes
        - installer/steps
        - cron
    excludePaths:
        analyse:
            - vendor
            - node_modules
            - storage
            - cache
            - tmp
            - build
            - frontend
            - data
            - tests
            - server
            - sito
            - releases

    reportUnmatchedIgnoredErrors: false

    # Ignore errors for dynamically loaded plugin classes (loaded via require_once at runtime)
    ignoreErrors:
        - '#Instantiated class Plugins\\Z39Server#'
        - '#unknown class Plugins\\Z39Server#'
