# ========================================
# Pinakes - Distribution Ignore
# Files to EXCLUDE from release packages
# ========================================

# Version control
.git/
.gitignore
.gitattributes

# IDE and AI assistant folders
.gemini/
.qoder/
.claude/
.vscode/
.idea/
.cursor/

# Development dependencies (node_modules excluded, vendor INCLUDED for production)
node_modules/
frontend/node_modules/
# NOTE: vendor/ is NOT excluded - it MUST be included in releases
# The release package includes optimized vendor/ from: composer install --no-dev --optimize-autoloader

# Development files
*.log
*.tmp
.DS_Store
.env
.installed
config.local.php
internal/

# Build artifacts (source only, not compiled)
# NOTE: Use /frontend/ to only match root-level frontend directory
# Do NOT use frontend/ alone - it would also match app/Views/frontend/!
/frontend/

# Tests
tests/
test/
.phpunit.result.cache

# Documentation (dev only)
docs/
CLAUDE.md

# CI/CD
.github/

# Release artifacts (don't package previous releases)
releases/
*.zip
!storage/plugins/*.zip

# Build script outputs
build-tmp/
migrations/

# Development documentation
updater.md
todo.md
.distignore

# Temporary files
*.bak
*.backup
*.old
*backup*
migration-*.php
clean-*.sh
export-*.php
fix-*.php

# Storage/uploads (exclude user data, keep directory structure)
storage/logs/*
storage/cache/*
storage/backups/*
storage/uploads/*
storage/tmp/*
storage/calendar/*
storage/plugins/*
public/uploads/*
backups/*
cache/*

# Keep essential files and directory structure
!storage/logs/.gitkeep
!storage/cache/.gitkeep
!storage/backups/.gitkeep
!storage/backups/.htaccess
!storage/uploads/.gitkeep
!storage/uploads/.htaccess
!storage/tmp/.gitkeep
!storage/calendar/.gitkeep
!storage/calendar/.htaccess
!storage/plugins/.gitkeep
!storage/.htaccess
!public/uploads/.gitkeep
!public/uploads/copertine/
!public/uploads/copertine/placeholder.jpg

# Include bundled plugins (they're part of the distribution)
!storage/plugins/open-library/
!storage/plugins/z39-server/
!storage/plugins/api-book-scraper/
!storage/plugins/digital-library/
!storage/plugins/dewey-editor/
